@page
@model WebApp.Pages.Account.RegisterModel
@{
}

<h3>User Registration</h3>
<br />
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="ViewModel.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="ViewModel.Email" class="form-control" />
                <span class="text-danger" asp-validation-for="ViewModel.Email"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="ViewModel.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="ViewModel.Password" class="form-control" />
                <span class="text-danger" asp-validation-for="ViewModel.Password"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
        </div>
    </form>
</div>